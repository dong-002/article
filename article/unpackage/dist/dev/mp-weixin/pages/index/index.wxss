.home .content {
  padding: 30rpx;
}
.home .content .item {
  border-bottom: 1px solid #ddd;
  display: flex;
  padding: 10rpx;
}
.home .content .item .text {
  flex: 1;
  padding-right: 15rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.home .content .item .text .title {
  font-size: 38rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.home .content .item .text .info {
  font-size: 28rpx;
  color: #afafaf;
}
.home .content .item .text .info text {
  padding-right: 10rpx;
}
.home .content .item .pic {
  width: 260rpx;
  height: 180rpx;
}
.home .content .item .pic image {
  width: 100%;
  height: 100%;
}
.home .btn {
  width: 100rpx;
  height: 100rpx;
  background-color: #42b983;
  color: #fff;
  border-radius: 50%;
  position: fixed;
  bottom: 100rpx;
  right: 60rpx;
  text-align: center;
  line-height: 100rpx;
}
.home .no-data {
  text-align: center;
  padding: 10rpx 0;
  color: #afafaf;
}

